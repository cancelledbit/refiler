{% extends 'layout.twig' %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col s12"><h5>Profile</h5></div>
        </div>
        <div class="row">
            <form class="col s12 m8" action="/profile/update" method="post">
                <div class="row">
                    <div class="input-field col s12">
                        <input name="username" id="username" type="text" class="validate" placeholder="{{ user.username }}">
                        <label for="username">Username</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s6">
                        <input name="first_name" id="fname" type="text" class="validate" placeholder="{{ user.first_name }}">
                        <label for="fname">First name</label>
                    </div>
                    <div class="input-field col s6">
                        <input name="last_name" id="lname" type="text" class="validate" placeholder="{{ user.last_name }}">
                        <label for="lname">Last name</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input disabled id="email" type="email" class="validate" placeholder="{{ user.email }}">
                        <label for="email">Email</label>
                    </div>
                </div>
                <div class="row">
                    <button class="btn waves-effect waves-light" type="submit" name="action">Update
                    </button>
                </div>
            </form>
            <div class="col s12 m4">
                <div class="collection">
                    <a href="#!" class="collection-item"><span class="badge">{{ totalCount }}</span>Total files</a>
                    <a href="#!" class="collection-item"><span class="badge">{{ totalSize }}</span>Space used</a>
                    <a href="/remove/all" class="collection-item red white-text">REMOVE ALL</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}